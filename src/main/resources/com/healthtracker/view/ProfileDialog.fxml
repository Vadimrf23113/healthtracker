<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.healthtracker.controller.ProfileDialogController">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <GridPane hgap="10" vgap="10">
        <Label text="Имя:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Возраст:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="ageField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Рост (см):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="heightCmField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Цель:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ChoiceBox fx:id="goalChoice" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="saveButton" text="Сохранить" onAction="#onSave"/>
        <Button fx:id="cancelButton" text="Отмена" onAction="#onCancel"/>
    </HBox>

</VBox>